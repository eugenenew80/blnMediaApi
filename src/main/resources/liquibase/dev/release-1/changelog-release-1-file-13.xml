<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="media-eug-38" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: doc_metering_reading_lines</comment>
        <createTable tableName="doc_metering_reading_lines" schemaName="apps">

            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="header_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="metering_point_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="meter_id" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="param_code" type="varchar(4)">
                <constraints nullable="false"/>
            </column>

            <column name="unit_code" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="oper_date" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="data_source_code" type="varchar(15)">
                <constraints nullable="false"/>
            </column>

            <column name="way_entering" type="varchar(15)">
                <constraints nullable="false"/>
            </column>

            <column name="start_balance" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="end_balance" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="flow" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="create_by" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_by" type="number">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-39" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: doc_metering_reading_lines</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_doc_metering_reading_lines"
	            schemaName="apps"
	            tableName="doc_metering_reading_lines"/>
	</changeSet>
	
	<changeSet id="media-eug-40" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: doc_metering_reading_lines</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="doc_metering_reading_lines_s"
	            startValue="1"/>
	</changeSet>	
</databaseChangeLog>
