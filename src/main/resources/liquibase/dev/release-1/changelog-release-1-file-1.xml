<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="media-eug-1" logicalFilePath="path-independent" author="eugene">
        <comment>Creating table: media_power_consumption</comment>
        <createTable tableName="media_power_consumption" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="source_system_code" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="source_metering_point_code" type="varchar(18)">
                <constraints nullable="true"/>
            </column>
            
            <column name="source_param_code" type="varchar(4)">
                <constraints nullable="false"/>
            </column>

            <column name="source_unit_code" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
                        
            <column name="metering_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="val" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="param_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="unit_id" type="number" >
                <constraints nullable="true"/>
            </column>

            <column name="interval" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="input_method" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="receiving_method" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="metering_point_id" type="number" >
                <constraints nullable="true"/>
            </column>

            <column name="meter_id" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="version" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="batch_id" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="int_count" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="create_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            
            <column name="last_update_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>

            <column name="create_by" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_by" type="number">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-2" logicalFilePath="path-independent" author="eugene">
	    <comment>Creating primary key for table: media_power_consumption</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_power_consumption"
	            schemaName="apps"
	            tableName="media_power_consumption"/>
	</changeSet>

	<changeSet id="media-eug-3" logicalFilePath="path-independent" author="eugene">
	    <comment>Creating sequence for table: media_power_consumption</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_power_consumption_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
