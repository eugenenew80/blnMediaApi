<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="media-eug-1" logicalFilePath="path-independent" author="eugene">
        <comment>Creating table: media_day_metering_flow</comment>
        <createTable tableName="media_meas_data" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>
            <column name="source_metering_point_code" type="varchar(18)">
                <constraints nullable="true"/>
            </column>
            
            <column name="source_param_code" type="varchar(4)">
                <constraints nullable="false"/>
            </column>

            <column name="source_unit_code" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
                        
            <column name="meas_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>

            <column name="interval_type" type="varchar(4)">
                <constraints nullable="true"/>
            </column>

            <column name="val" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="status" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="data_source_code" type="varchar(15)">
                <constraints nullable="false"/>
            </column>

            <column name="param_code" type="varchar(4)">
                <constraints nullable="true"/>
            </column>

            <column name="unit_id" type="number" >
                <constraints nullable="true"/>
            </column>

            <column name="metering_point_id" type="number" >
                <constraints nullable="true"/>
            </column>

            <column name="meter_id" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>
            
            <column name="last_update_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>                                   
        </createTable>
    </changeSet>

	<changeSet id="media-eug-2" logicalFilePath="path-independent" author="eugene">
	    <comment>Creating primary key for table: media_meas_data</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_meas_data"
	            schemaName="apps"
	            tableName="media_meas_data"/>
	</changeSet>

	<changeSet id="media-eug-3" logicalFilePath="path-independent" author="eugene">
	    <comment>Creating sequence for table: media_meas_data</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_meas_data_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
