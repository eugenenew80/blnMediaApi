<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="media-eug-126" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: media_groups_tl</comment>
        <createTable tableName="media_groups_tl" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="group_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="lang" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="create_by" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_by" type="number">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-127" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: media_groups_tl</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_groups_tl"
	            schemaName="apps"
	            tableName="media_groups_tl"/>
	</changeSet>

    <changeSet id="media-eug-128" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating unique constraint for table: media_groups_tl</comment>
	    <addUniqueConstraint
	            columnNames="group_id, lang"
	            constraintName="un_media_groups_tl_1"
	            schemaName="apps"
	            tableName="media_groups_tl"/>
	</changeSet>
	
	<changeSet id="media-eug-129" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: media_groups_tl</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_groups_tl_s"
	            startValue="1"/>
	</changeSet>

    <changeSet id="media-eug-130" logicalFilePath="path-independent" author="eugene" context="postgres">
        <addColumn schemaName="apps" tableName="media_groups">
            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="create_by" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_by" type="number">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="media-eug-131" logicalFilePath="path-independent" author="eugene" context="postgres">
        <dropNotNullConstraint columnDataType="varchar(100)" columnName="name" schemaName="apps" tableName="media_groups"/>
    </changeSet>

</databaseChangeLog>
