<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="media-eug-121" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: media_doc_under_accounting_headers_tl</comment>
        <createTable tableName="media_doc_under_accounting_headers_tl" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="header_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="lang" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="create_by" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_by" type="number">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-122" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: media_doc_under_accounting_headers_tl</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_doc_under_accounting_headers_tl"
	            schemaName="apps"
	            tableName="media_doc_under_accounting_headers_tl"/>
	</changeSet>

    <changeSet id="media-eug-123" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating unique constraint for table: media_doc_under_accounting_headers_tl</comment>
	    <addUniqueConstraint
	            columnNames="header_id, lang"
	            constraintName="un_media_doc_under_accounting_headers_tl_1"
	            schemaName="apps"
	            tableName="media_doc_under_accounting_headers_tl"/>
	</changeSet>
	
	<changeSet id="media-eug-124" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: media_doc_under_accounting_headers_tl</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_doc_under_accounting_headers_tl_s"
	            startValue="1"/>
	</changeSet>

    <changeSet id="media-eug-125" logicalFilePath="path-independent" author="eugene" context="postgres">
        <dropColumn columnName="name" schemaName="apps" tableName="media_doc_under_accounting_headers"/>
        <rollback>
            <addColumn schemaName="apps" tableName="media_doc_under_accounting_headers">
                <column name="name" type="varchar(100)"/>
            </addColumn>
        </rollback>
    </changeSet>
</databaseChangeLog>
