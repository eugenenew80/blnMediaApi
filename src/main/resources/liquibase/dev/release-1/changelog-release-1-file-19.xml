<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="media-rus-22" logicalFilePath="path-independent" author="ruslan">
        <comment>Creating table: media_processing_statues</comment>
        <createTable tableName="media_processing_statues" schemaName="apps">
            <column name="code" type="varchar2(20)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar2(50)">
                <constraints nullable="false"/>
            </column>


        </createTable>
    </changeSet>

	<changeSet id="media-rus-23" logicalFilePath="path-independent" author="ruslan">
	    <comment>Creating primary key for table: media_processing_statues</comment>
	    <addPrimaryKey 
	            columnNames="code"
	            constraintName="pk_media_processing_statues"
	            schemaName="apps"
	            tableName="media_processing_statues"/>
	</changeSet>

    <changeSet id="dict-rus-24" logicalFilePath="path-independent" author="ruslan" context="dev">
        <comment>Creating table: media_processing_statues_tl</comment>
        <createTable tableName="media_processing_statues_tl" schemaName="apps" >
            <column name="code" type="varchar(20)" remarks="Ссылка на родительскую запись">
                <constraints nullable="false"/>
            </column>

            <column name="lang" type="varchar(10)" remarks="Язык">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(50)" remarks="Наименование">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="dict-rus-25" logicalFilePath="path-independent" author="ruslan" context="dev">
        <comment>Creating primary key for table: media_processing_statues_tl</comment>
        <addPrimaryKey
                columnNames="code, lang"
                constraintName="pk_media_processing_statues_tl"
                schemaName="apps"
                tableName="media_processing_statues_tl"/>
    </changeSet>

    <changeSet id="dict-rus-26" logicalFilePath="path-independent" author="ruslan" context="dev">
        <comment>Creating foreign constraint: media_processing_statues_tl to media_processing_statues</comment>
        <addForeignKeyConstraint
                baseTableSchemaName="apps"
                baseTableName="media_processing_statues_tl"
                baseColumnNames="code"
                constraintName="fk_media_processing_statues_tl_1"
                deferrable="true"
                initiallyDeferred="true"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                referencedTableSchemaName="apps"
                referencedTableName="media_processing_statues"
                referencedColumnNames="code"
        />
    </changeSet>
</databaseChangeLog>
