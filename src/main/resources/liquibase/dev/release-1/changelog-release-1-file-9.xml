<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="media-eug-25" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: media_group_metering_point</comment>
        <createTable tableName="media_group_metering_point" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>
            
            <column name="group_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="metering_point_id" type="number">
                <constraints nullable="false"/>
            </column>
            
            <column name="list_order" type="number">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-26" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: media_group_metering_point</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_group_metering_point"
	            schemaName="apps"
	            tableName="media_group_metering_point"/>
	</changeSet>
	
	<changeSet id="media-eug-27" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: media_group_metering_point</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_group_metering_point_s"
	            startValue="1"/>
	</changeSet>	
	
	<changeSet id="media-eug-28" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Creating unique constraint for table: media_group_metering_point</comment>
	    <addUniqueConstraint
	            columnNames="group_id, metering_point_id"
	            constraintName="un_media_group_metering_point_1"
	            schemaName="apps"
	            tableName="media_group_metering_point"/>
	</changeSet>		
</databaseChangeLog>
