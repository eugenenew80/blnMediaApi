<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="media-eug-22" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: media_groups</comment>
        <createTable tableName="media_groups" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-23" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: media_groups</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_groups"
	            schemaName="apps"
	            tableName="media_groups"/>
	</changeSet>
	
	<changeSet id="media-eug-24" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: media_groups</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_groups_s"
	            startValue="1"/>
	</changeSet>		
</databaseChangeLog>
