<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="media-eug-32" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: media_meter_reading_templates</comment>
        <createTable tableName="media_meter_reading_templates" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="doc_type_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
                        
            <column name="header" type="varchar(300)">
                <constraints nullable="true"/>
            </column>

            <column name="group_id" type="number">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-33" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: media_meter_reading_templates</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_meter_reading_templates"
	            schemaName="apps"
	            tableName="media_meter_reading_templates"/>
	</changeSet>
	
	<changeSet id="media-eug-34" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: media_meter_reading_templates</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_meter_reading_templates_s"
	            startValue="1"/>
	</changeSet>	
</databaseChangeLog>
