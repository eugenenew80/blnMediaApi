<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="media-eug-34" logicalFilePath="path-independent" author="eugene">
        <comment>Creating table: media_event_log</comment>
        <createTable tableName="media_batches" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="work_list_header_id" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="start_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>

            <column name="end_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>

            <column name="rec_count" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="err_msg" type="varchar(300)">
                <constraints nullable="true"/>
            </column>

            <column name="create_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>

            <column name="create_by" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_by" type="number">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-35" logicalFilePath="path-independent" author="eugene">
	    <comment>Creating primary key for table: media_batches</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_batches"
	            schemaName="apps"
	            tableName="media_batches"/>
	</changeSet>
	
	<changeSet id="media-eug-36" logicalFilePath="path-independent" author="eugene">
	    <comment>Creating sequence for table: media_batches</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_batches_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
