<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="media-eug-51" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: media_doc_meter_replacing_headers</comment>
        <createTable tableName="media_doc_meter_replacing_headers" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
                        
            <column name="header" type="varchar(300)">
                <constraints nullable="true"/>
            </column>

            <column name="doc_type_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="doc_date" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="metering_point_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="old_meter_id" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="new_meter_id" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="create_by" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_by" type="number">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-52" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: media_doc_meter_replacing_headers</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_doc_meter_replacing_headers"
	            schemaName="apps"
	            tableName="media_doc_meter_replacing_headers"/>
	</changeSet>
	
	<changeSet id="media-eug-53" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: media_doc_meter_replacing_headers</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_doc_meter_replacing_headers_s"
	            startValue="1"/>
	</changeSet>	
</databaseChangeLog>
