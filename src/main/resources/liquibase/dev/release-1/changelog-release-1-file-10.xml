<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="media-eug-29" logicalFilePath="path-independent" author="eugene">
        <comment>Creating table: media_work_list_lines</comment>
        <createTable tableName="media_work_list_lines" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="work_list_header_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="metering_point_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="is_parameter_ap" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="is_parameter_am" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="is_parameter_rp" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="is_parameter_rm" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="create_date" type="TIMESTAMP WITH LOCAL TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_date" type="TIMESTAMP WITH LOCAL TIME ZONE">
                <constraints nullable="true"/>
            </column>

            <column name="create_by" type="number" remarks="Автор">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_by" type="number" remarks="Автор последнего обновления">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-30" logicalFilePath="path-independent" author="eugene">
	    <comment>Creating primary key for table: media_work_list_lines</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_work_list_lines"
	            schemaName="apps"
	            tableName="media_work_list_lines"/>
	</changeSet>
	
	<changeSet id="media-eug-31" logicalFilePath="path-independent" author="eugene">
	    <comment>Creating sequence for table: media_work_list_lines</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_work_list_lines_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
