<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="media-eug-46" logicalFilePath="path-independent" author="eugene">
        <comment>Creating table: media_user_task_lines</comment>
        <createTable tableName="media_user_task_lines" schemaName="apps" remarks="Список точек учета и измеряемых параметров для ручной инициации обмена данными">
            <column name="id" type="number" remarks="Идентификатор">
                <constraints nullable="false"/>
            </column>

            <column name="user_task_header_id" type="number" remarks="Идентификатор списка точек учета для ручной инициации обмена данными">
                <constraints nullable="false"/>
            </column>

            <column name="metering_point_id" type="number" remarks="Идентификатор точки учета">
                <constraints nullable="false"/>
            </column>

            <column name="param_id" type="number" remarks="Идентификатор измеряемого параметра">
                <constraints nullable="false"/>
            </column>

            <column name="start_metering_date" type="TIMESTAMP" remarks="Дата и время начала порции данных">
                <constraints nullable="false"/>
            </column>

            <column name="end_metering_date" type="TIMESTAMP" remarks="Дата и время окончания порции данных">
                <constraints nullable="false"/>
            </column>

            <column name="create_date" type="TIMESTAMP" remarks="Дата и время создания записи">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_date" type="TIMESTAMP" remarks="Дата и время изменения записи">
                <constraints nullable="true"/>
            </column>

            <column name="create_by" type="number" remarks="Автор">
                <constraints nullable="true"/>
            </column>

            <column name="last_update_by" type="number" remarks="Автор изменения">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="media-eug-47" logicalFilePath="path-independent" author="eugene">
	    <comment>Creating primary key for table: media_user_task_lines</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_user_task_lines"
	            schemaName="apps"
	            tableName="media_user_task_lines"/>
	</changeSet>
	
	<changeSet id="media-eug-48" logicalFilePath="path-independent" author="eugene">
	    <comment>Creating sequence for table: media_user_task_lines</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_user_task_lines_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
