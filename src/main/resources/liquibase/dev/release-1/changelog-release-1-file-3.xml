<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="media-eug-7" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: media_month_metering_data_raw</comment>
        <createTable tableName="media_month_metering_data_raw" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="external_code" type="varchar(18)">
                <constraints nullable="true"/>
            </column>
            
            <column name="param_code" type="varchar(4)">
                <constraints nullable="false"/>
            </column>

            <column name="unit_code" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
                        
            <column name="metering_year" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="metering_month" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="data_source_code" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
                     
            <column name="way_entering" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
                                                
            <column name="val" type="number">
                <constraints nullable="true"/>
            </column>
            
            <column name="status" type="number">
                <constraints nullable="false"/>
            </column>  
            
            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>
            
            <column name="last_update_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="true"/>
            </column>                       
        </createTable>
    </changeSet>

	<changeSet id="media-eug-8" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: media_month_metering_data_raw</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_media_month_metering_data_raw"
	            schemaName="apps"
	            tableName="media_month_metering_data_raw"/>
	</changeSet>
	
	
	<changeSet id="media-eug-9" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: media_month_metering_data_raw</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="media_month_metering_data_raw_s"
	            startValue="1"/>
	</changeSet>	
	
</databaseChangeLog>
